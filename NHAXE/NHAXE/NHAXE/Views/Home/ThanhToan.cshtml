
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="format-detection" content="telephone=no" />

    <title>Giá vé PONO</title>
</head>
    <body style="background: #fff;">
        <div id="steps" class="container">
            <ul class="list-step clearfix">
                <li>Chọn tuyến <span></span> </li>
                <li class="active">Chọn ghế <span></span></li>
                <li>Thông tin khách hàng <span></span></li>
                <li>Thanh toán <span></span></li>
            </ul>
        </div>




        <div id="content-steps" class="container">
            <div class="row">
                <div class="col-sm-4 col-xs-12 col-ms-12">
                    <div class="panel">
                        <p class="text-center text-primary text-uppercase">Châu Đốc - Cần Thơ ngày <span ng-bind-html="step1Info.departureDate|svcDate">26-03-2018</span></p>
                        <form id="form-steps" name="form" ng-submit="form.$valid ? next(form.$valid): showError(form.$error)" novalidate="" class="ng-pristine ng-invalid ng-invalid-min ng-valid-max ng-valid-required">
                            <fieldset>
                                <div class="row hidden">
                                    <input type="number" ng-model="selectSeatNum" name="selectSeatNum" value="0" min="1" max="10" required="" class="ng-pristine ng-untouched ng-invalid ng-invalid-min ng-valid-max ng-valid-required">
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label for="">Chọn tuyến xe</label>
                                            <!-- ngRepeat: schedule in schedules --><!-- ngIf: schedules.length > 0 --><div class="controls" ng-repeat="schedule in schedules" ng-animate="'animate'" ng-if="schedules.length > 0" style="">
                                                <i class="fa fa-bus text-primary"></i>
                                                <p class="form-control" ng-class="form.$dirty ? (form.selectRoute.$valid ? 'valid': 'invalid'): ''">
                                                    <span class="f-left">Chau Doc ⇒ Can Tho</span>
                                                    <span class="f-right">
                                                        <span ng-bind-html="info.price|svcMoney">100.000<sup>₫</sup></span>&nbsp;
                                                        <input type="radio" ng-model="info.selectRoute" name="selectRoute" ng-value="schedule" required="" class="ng-pristine ng-valid ng-valid-required ng-touched" value="[object Object]" style="">
                                                    </span>
                                                </p>
                                                <!-- ngIf: info.price == 0 && getPriceComplete === true -->
                                            </div><!-- end ngIf: schedules.length > 0 --><!-- end ngRepeat: schedule in schedules -->
                                            <!-- ngIf: schedules.length == 0 && getScheduleComplete === true -->
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label for="">Chọn giờ khởi hành</label>
                                            <!-- ngIf: timeTables.length > 0 --><div class="controls" ng-if="timeTables.length > 0" style="">
                                                <i class="fa fa-clock-o text-primary"></i>
                                                <select class="form-control ng-pristine ng-untouched ng-valid ng-valid-required" ng-class="form.$dirty ? (form.departureTime.$valid ? 'valid': 'invalid'): ''" name="departureTime" ng-model="info.departureTime" ng-options="option.DisplayText for option in timeTables track by option.Id" required=""><option value="2238371" label="05:00 (Ghế)" selected="selected">05:00 (Ghế)</option><option value="2238355" label="06:30 (Ghế)">06:30 (Ghế)</option><option value="2238339" label="08:00 (Ghế)">08:00 (Ghế)</option><option value="2238323" label="10:00 (Ghế)">10:00 (Ghế)</option><option value="2238307" label="11:30 (Ghế)">11:30 (Ghế)</option><option value="2238291" label="13:00 (Ghế)">13:00 (Ghế)</option><option value="2238275" label="14:30 (Ghế)">14:30 (Ghế)</option><option value="2238259" label="17:00 (Ghế)">17:00 (Ghế)</option><option value="2238242" label="19:00 (Ghế)">19:00 (Ghế)</option></select>

                                            </div><!-- end ngIf: timeTables.length > 0 -->
                                            <!-- ngIf: timeTables.length == 0 && getTimeTableComplete === true -->
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label for="">Chọn điểm lên xe</label>
                                            <!-- ngIf: pickUpPoints.length > 0 --><div class="controls" ng-if="pickUpPoints.length > 0" style="">
                                                <i class="fa fa-map-marker text-primary"></i>
                                                <select class="form-control ng-pristine ng-untouched ng-valid ng-valid-required" ng-class="form.$dirty ? (form.pickUpPoint.$valid ? 'valid': 'invalid'): ''" name="pickUpPoint" ng-model="info.pickUpPoint" ng-options="option.Address for option in pickUpPoints track by option.Id" required=""><option value="386186" label="VP Long Xuyên: 392 Phạm Cự Lượng, Khóm Tân Phú, Phường Mỹ Quý, Tp Long Xuyên">VP Long Xuyên: 392 Phạm Cự Lượng, Khóm Tân Phú, Phường Mỹ Quý, Tp Long Xuyên</option><option value="386403" label="VP Lộ Tẻ: Ấp Bình Phú 1, Xã Bình Hòa, Châu Thành An Giang">VP Lộ Tẻ: Ấp Bình Phú 1, Xã Bình Hòa, Châu Thành An Giang</option><option value="386510" label="Vinh Tre - Chau Doc">Vinh Tre - Chau Doc</option><option value="386512" label="Cai Dau - Chau Doc">Cai Dau - Chau Doc</option><option value="386610" label="VP Mỹ Thới: 26/32 Quốc Lộ 91, khóm Trung An, phường Mỹ Thới, Tp Long Xuyên">VP Mỹ Thới: 26/32 Quốc Lộ 91, khóm Trung An, phường Mỹ Thới, Tp Long Xuyên</option><option value="386195" label="VP Châu Đốc: 89 Phan Văn Vàng, P.Châu Phú A , TP.Châu Đốc (TERMINAL BUS STATION)" selected="selected">VP Châu Đốc: 89 Phan Văn Vàng, P.Châu Phú A , TP.Châu Đốc (TERMINAL BUS STATION)</option></select>
                                            </div><!-- end ngIf: pickUpPoints.length > 0 -->
                                            <!-- ngIf: pickUpPoints.length == 0 && getPickUpPointComplete === true -->
                                        </div>
                                    </div>
                                </div>
                                <div class="form-section">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col-ms-12">
                                        <a href="thanh-toan-step1.html" ng-click="prev()" class="btn btn-primary btn-flat"><i class="fa fa-arrow-left icon-flat bg-btn-actived"></i> Quay lại</a>


                                        <a href="thanh-toan-step2.html" class="btn btn-success btn-flat"><i class="fa fa-arrow-right icon-flat bg-success"></i>Tiếp tục</a>

                                    </div>
                                </div>
                            </fieldset>

                        </form>
                    </div>
                    <div class="panel">
                        <p class="text-center text-uppercase text-primary">Thông tin chuyến</p>
                        <div id="step-info">
                            <table class="time-map table">
                                <tbody>
                                    <tr>
                                        <td>
                                            <p>
                                                <i class="fa fa-bus text-primary"></i> <strong>Xuất phát</strong>
                                            </p>
                                            <span ng-bind-html="step1Info.departureDate|svcDate">26-03-2018</span><br>
                                            <span>05:00</span>
                                        </td>
                                        <td class="time-line">
                                            <div class="first"></div>
                                        </td>
                                        <td>
                                            <p>&nbsp;</p>
                                            <p>
                                                Châu Đốc<br>Chau Doc
                                            </p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <p>
                                                <i class="fa fa-clock-o"></i>
                                                4 giờ
                                            </p>
                                        </td>
                                        <td class="time-line">
                                            <div class="middle">

                                            </div>
                                        </td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <p>
                                                <i class="fa fa-bus text-primary"></i> <strong>Đến lúc</strong>
                                            </p>
                                            <span ng-bind-html="dropOffDateTime|svcDate">26-03-2018</span><br>
                                            <span ng-bind-html="dropOffDateTime|svcTime">08:30</span>
                                        </td>
                                        <td class="time-line ">
                                            <div class="end"></div>
                                        </td>
                                        <td>
                                            <p>&nbsp;</p>
                                            <p>
                                                Cần Thơ<br>Can Tho
                                            </p>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <p>
                                <strong>Số ghế:</strong>
                                <span ng-show="info.selectSeats.length > 0">
                                    <span ng-repeat="s in info.selectSeats">@*{{s.Chair}}{{$last ? '' : ', '}}*@</span>
                                </span>
                            </p>
                            <p>
                                <strong>Tổng tiền:</strong>
                                <span class="text-primary" ng-bind-html="info.total|svcMoney"></span>
                            </p>
                            <p>
                                <strong>Miễn phí</strong>
                                <span>
                                    <span class="water sprite" title="Nước uống"></span>
                                    <span class="khan sprite" title="Khăn lạnh"></span>
                                    <span class="wifi sprite" title="Wifi"></span>
                                    <span class="tivi sprite" title="Tivi"></span>
                                </span>
                            </p>

                        </div>


                    </div>


                </div>
                <div class="col-sm-8 col-xs-12 col-ms-12">

                    <div class="panel">

                        <div>
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <td>
                                            <strong class="text-uppercase">Số ghế:</strong>
                                            <span ng-show="info.selectSeats.length > 0" class="ng-hide">
                                                <!-- ngRepeat: s in info.selectSeats -->
                                            </span>
                                            <span ng-show="info.selectSeats.length == 0" class="">Chưa chọn ghế</span>
                                        <td class="text-right">
                                            <strong class="text-uppercase">Tổng tiền:</strong>
                                            (<span class="text-primary" style="font-weight: 600;" ng-bind-html="info.total|svcMoney">0<sup>₫</sup></span>)
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <!--<div class="gold-hour" ng-show="goldHour"></div>-->
                        <!--<p class="text-center text-uppercase text-primary">Sơ đồ {{info.departureTime.Kind}}</p>-->
                        <!-- ngIf: seats.length > 0 --><div ng-switch="" on="info.departureTime.Kind" ng-if="seats.length > 0" class="" style="">
                            <!-- ngSwitchWhen: Ghế --><div ng-switch-when="Ghế">

                                                          <table class="table grid-seat">
                                                              <thead>
                                                                  <tr>
                                                                      <th colspan="5"><p class="text-center text-uppercase text-primary">Sơ đồ Ghế</p></th>
                                                                  </tr>
                                                              </thead>
                                                              <tbody>
                                                                 
                                                                  @for (int i = 0; i < 5; i++)
                                                                  {
                                                                      int index = 0;

                                                                      string[] list = new string[] { "A01", "A02", "A03", "A04", "A05", "B01", "B02", "B03", "B04", "B05", "C01", "C02", "C03", "C04", "C05", "D01", "D02", "D03", "D04", "D05" , "E01", "E02", "E03", "E04", "E05" };
                                                                      {
                                                                          for (int j = 0; j < 5; j++)
                                                                          {
                                                                              if (j == 0)
                                                                              { index = i; }
                                                                              else if (i == 0)
                                                                              { index = i * j + 5 *j; }
                                                                              else
                                                                              { index = 5*j + i;  }
                                                                                   <td ng-repeat="s in row  track by $index" ng-switch="" on="s.Status">
                                                                                       <button value="0" class="btn-ghe">@list[index]</button>
                                                                              </td><!-- end ngRepeat: s in row  track by $index -->
                                                                              
                                                                          }
                                                                      <tr ng-repeat="row in seats track by $index" ng-animate="'animate'"></tr><!-- end ngRepeat: row in seats track by $index -->
                                                                      //else
                                                                      //{
                                                                      //    <td ng-repeat="s in row  track by $index" ng-switch="" on="s.Status">
                                                                      //        <!-- ngSwitchWhen: 0 --><div class="seat" ng-class="s.Discount > 0 ? 'seat-discount': ''" ng-switch-when="0" ng-bind-html="s.Chair" ng-click="selectSeat(s)">@i</div><!-- end ngSwitchWhen: -->
                                                                      //        <!-- ngSwitchWhen: 1 -->
                                                                      //        <!-- ngSwitchWhen: 2 -->
                                                                      //    </td><!-- end ngRepeat: s in row  track by $index -->
                                                                      //}


                                                                  }

                                                              }

                                                                  </tbody>

                                                              </table>
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 col-ms-12 text-center">
                                            <div class="ordered"></div><span>Đang chọn</span>
                                        </div>
                                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 col-ms-12 text-center">
                                            <div class="booked"></div><span>Đã đặt</span>
                                        </div>
                                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 col-ms-12 text-center">
                                            <div class="nothing"></div><span>Còn trống</span>
                                        </div>
                                    </div>
                                </div><!-- end ngSwitchWhen: -->
                                <!-- ngSwitchWhen: Giường -->
                            </div><!-- end ngIf: seats.length > 0 -->
                            <!-- ngIf: seats.length == 0 && getSeatComplete === true -->
                        </div>

                    </div>
                </div>
            </div>

        </body>
</html>