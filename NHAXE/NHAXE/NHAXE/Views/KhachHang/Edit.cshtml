@model Models.Framework.KHACH_HANG

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Info | PONOBus ID</title>
</head>
<
<body style="background: #fff;">

    <section id="body-top">
        <div class="container">
            <div class="row">
                <div class="col-lg-3"></div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 col-ms-12">
                    <div style="border-radius: 5px;border: 1px solid #ddd;height: 500px;">
                        <!-- Nav tabs -->
                        <div class="text-center text-uppercase text-primary" style="margin-bottom: 25px; margin-top:10px;">
                            <p class="text-center text-primary text-uppercase">
                                <strong style="font-size : 30px">sửa thông tin cá nhân</strong>
                            </p>
                            @using (Html.BeginForm("Edit", "KhachHang", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal" style="color: #333;">

                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                                    <div class="form-group them1">
                                        
                                        
                                        <div class="col-lg-4 col-md-4">
                                            <label for="">Email</label>

                                        </div>
                                        <div class="col-lg-8 col-md-8">
                                            <div class="on"></div>
                                            @Html.TextBoxFor(model => model.EMAIL_KH, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.EMAIL_KH, "", new { @class = "text-danger" })

                                        </div>
                                    </div>


                                  
                                        <div class="form-group">
                                            
                                            <div class="col-lg-4 col-md-4">
                                                <label for="">Họ và tên</label>

                                            </div>
                                            <div class="col-lg-8 col-md-8">
                                                @Html.TextBoxFor(model => model.TEN_KH, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.TEN_KH, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                    
                                            <div class="form-group">
                                                <div class="col-lg-4 col-md-4">
                                                    <label for="">Số điện thoại</label>
                                                </div>
                                                <div class="col-lg-8 col-md-8">
                                                    @Html.TextBoxFor(model => model.SDT_KH, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.SDT_KH, "", new { @class = "text-danger" })

                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-lg-4 col-md-4">
                                                    <label for="">Số CMND</label>
                                                </div>
                                                <div class="col-lg-8 col-md-8">
                                                   @Html.TextBoxFor(model => model.CMND_KH, new { htmlAttributes = new { @class = "form-control" } })
                                                   @Html.ValidationMessageFor(model => model.CMND_KH, "", new { @class = "text-danger" })

                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-lg-4 col-md-4">
                                                    <label for="">Địa chỉ</label>
                                                </div>
                                                <div class="col-lg-8 col-md-8">
                                                    @Html.TextBoxFor(model => model.DIACHI_KH, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.DIACHI_KH, "", new { @class = "text-danger" })

                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-lg-4 col-md-4">
                                                    <label for="">Mật khẩu</label>
                                                </div>
                                                <div class="col-lg-8 col-md-8">
                                                    @Html.PasswordFor(model => model.MATKHAU, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.MATKHAU, "", new { @class = "text-danger" })
                                                </div>
                                               
                                            </div>

                                            <div class="form-group">
                                                <div class="col-lg-4 col-md-4">
                                                    <label for="">Nhập lại mật khẩu</label>
                                                </div>
                                                <div class="col-lg-8 col-md-8">
                                                    @Html.PasswordFor(model => model.CONFIRM_PASS, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.CONFIRM_PASS, "", new { @class = "text-danger" })

                                                </div>
                                               

                                            </div>

                                            <div class="form-group">
                                                <div class="col-md-offset-4 col-md-10">
                                                    <input type="submit" value="Cập nhật" class="btn btn-primary" />
                                                </div>
                                            </div>
                                        </div>
                                        }
                                    </div>
                                </div>




                    <div class="col-lg-5 col-md-5 col-sm-6 col-xs-12 col-ms-12"></div>
                </div>
            </div>



        </div>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>



        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

        <script type="text/javascript" src="Content/js/SalsaCalendar.min.js"></script>



    </section>
</body>
</html>

