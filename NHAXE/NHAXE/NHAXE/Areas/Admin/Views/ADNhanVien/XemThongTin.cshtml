                        @Html.TextBoxFor(model => model.DIACHI_NV, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DIACHI_NV, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
