                        <div class="on3"></div>
                        <div class="che"></div>
                        @Html.DropDownList("CHUCVU", new List<SelectListItem>
                   {
                       new SelectListItem {Text = "GIÁM ÐỐC" ,Value ="GIAMDOC" },
