
@model List<Models.Framework.TUYEN_DUONG>
<link href="~/Areas/Admin/Content/admin/css/animate.css" rel="stylesheet" />
<script src="~/Areas/Admin/Content/admin/css/bootstrap.js"></script>
<link href="~/Areas/Admin/Content/admin/css/imagecenter.css" rel="stylesheet" />
<link href="~/Areas/Admin/Content/admin/css/rmodal.css" rel="stylesheet" />
<style type="text/css">
    .modal .modal-dialog {
        margin-top: 200px;
        width: 60%;
    }
</style>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header{
  Tuyến Đường
}


<script type="text/javascript" src="https://unpkg.com/rmodal@1.0.26/dist/rmodal.js"></script>
<script type="text/javascript" src="~/Areas/Admin/assets/scripts/rmodal.js"></script>
<html>
<head>

</head>
<body>
    <div class="box">
        <div class="row">
            @*<div class="col-lg-12">
                <h1 class="page-header">Tuyến đường</h1>
            </div>*@
        </div>
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="box-header hd1">
                        <div class="input-group-btn">
                            <a class="btn btn-primary" href="~/Admin/ADTuyenDuong/Create"> Thêm mới</a>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th style="width: 15%; text-align: center">
                                        @Html.DisplayNameFor(model => model.First().MS_TUYEN)
                                    </th>
                                    <th style="width:10% ; text-align: center">
                                        @Html.DisplayNameFor(model => model.First().BENDI)
                                    </th>
                                    <th style="width:10% ; text-align: center">
                                        @Html.DisplayNameFor(model => model.First().BENDEN)
                                    </th>
                                    <th style="width:15% ; text-align: center">
                                        @Html.DisplayNameFor(model => model.First().QUANGDUONG)
                                    </th>
                                    <th style="width:15% ; text-align: center">
                                        @Html.DisplayNameFor(model => model.First().THOIGIAN)
                                    </th>
                                    <th style="width: 25%; text-align: center">
                                        Chỉnh sửa dữ liệu
                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr id="row_@item.MS_TUYEN">
                                        <td style="text-align: center;">
                                            @Html.DisplayFor(modelItem => item.MS_TUYEN)
                                        </td>
                                        <td style="text-align: center;">
                                            @Html.DisplayFor(modelItem => item.BENDI)
                                        </td>
                                        <td style="text-align: center;">
                                            @Html.DisplayFor(modelItem => item.BENDEN)
                                        </td>
                                        <td style="text-align: center;">
                                            @Html.DisplayFor(modelItem => item.QUANGDUONG)
                                        </td>
                                        <td style="text-align: center;">
                                            @Html.DisplayFor(modelItem => item.THOIGIAN)
                                        </td>
                                        <td style="text-align: center">
                                            <a class="btn btn-default" href='@Url.Action("Edit", "ADTuyenDuong", new { maTuyen = @item.MS_TUYEN })' style="width:50px"><i class="fa fa-fw fa-edit" title="Sửa"></i></a>
                                            <a class="btn btn-danger btn-xs" onclick="deleteItem('@item.MS_TUYEN')" href="javascript:void(0)"><i class="fa fa-trash-o"></i></a>

                                            <a name="showModal" class="btn btn-success" style="width:50px" title="Chi tiết">
                                                <i class="fa fa-fw fa-clipboard"></i>
                                                <input type="hidden" id="abc" value="@item.MS_TUYEN" />
                                                <input type="hidden" id="abcd" value="@item.BENDI" />
                                                <input type="hidden" id="abcde" value="@item.BENDEN" />
                                                <input type="hidden" id="abcdef" value="@item.QUANGDUONG" />
                                                <input type="hidden" id="abcdefg" value="@item.THOIGIAN" />
                                                <input type="hidden" id="abcdefhg" value="@item.GIAVE" />
                                            </a>
                                            <div id="modal" class="modal">
                                                <div class="modal-dialog animated">
                                                    <div class="modal-content">
                                                        <form class="form-horizontal" method="get">
                                                            <div class="modal-header">
                                                                <button style="width:100px; float:right;width:50px" class="btn btn-danger" onclick="modal.close();"><i class="fa fa-fw fa-remove"></i></button>
                                                                <strong>Chi tiết  <font id="nameBook"></font></strong>
                                                            </div>
                                                            <center>
                                                                <div class="modal-body">
                                                                    <div>
                                                                        <div style="float: left; margin-right:2px">
                                                                            <a style="display:none" id="URLImageBook"></a>
                                                                            <img height="280" width="275" id="imgBook" src="~/Areas/Admin/assets/img/xe.jpg" />

                                                                        </div>
                                                                        <div>
                                                                            <table class="table table-bordered table-hover" style="width:60%">
                                                                                <tr>
                                                                                    <td>
                                                                                        <p>Mã tuyến:</p>
                                                                                    </td>
                                                                                    <td>
                                                                                        <p><font id="textAT" /></p>
                                                                                    </td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <td>
                                                                                        <p>Bến đi:</p>
                                                                                    </td>
                                                                                    <td>
                                                                                        <p><font id="textCT" /></p>
                                                                                    </td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <td>
                                                                                        <p>Bến đến:</p>
                                                                                    </td>
                                                                                    <td>
                                                                                        <p><font id="textPLS" /></p>
                                                                                    </td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <td>
                                                                                        <p>Quảng Đường :</p>
                                                                                    </td>
                                                                                    <td>
                                                                                        <p><font id="textPLSF" /></p>
                                                                                    </td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <td>
                                                                                        <p>Thời Gian:</p>
                                                                                    </td>
                                                                                    <td>
                                                                                        <p><font id="textPLSK" /></p>
                                                                                    </td>
                                                                                </tr>
                                                                                <tr>
                                                                                    <td>
                                                                                        <p>Giá Vé:</p>
                                                                                    </td>
                                                                                    <td>
                                                                                        <p><font id="textPLSH" /></p>
                                                                                    </td>
                                                                                </tr>
                                                                            </table>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </center>
                                                            <div class="modal-footer">
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
            <!--End Advanced Tables -->
        </div>

    </div>

    <script language="javascript">
        window.onload = function () {
            var modal = new RModal(document.getElementById('modal'), {
                //content: 'Abracadabra'
                beforeOpen: function (next) {
                    console.log('beforeOpen');
                    next();
                }
                , afterOpen: function () {
                    console.log('opened');
                }

                , beforeClose: function (next) {
                    console.log('beforeClose');
                    next();
                }
                , afterClose: function () {
                    console.log('closed');
                }

            });


            document.addEventListener('keydown', function (ev) {
                modal.keydown(ev);
            }, false);
            $("a[name='showModal']").click(function () {
                $('#nameBook').text($(this).find('input[type=hidden]').val());
                $('#textAT').text($(this).find('input[id=abc]').val());
                $('#textCT').text($(this).find('input[id=abcd]').val());
                $('#textPLS').text($(this).find('input[id=abcde]').val());
                $('#textPLSF').text($(this).find('input[id=abcdef]').val());
                $('#textPLSK').text($(this).find('input[id=abcdefg]').val());
                $('#textPLSH').text($(this).find('input[id=abcdefhg]').val());

                modal.open();
            });

        }
        
        
        function deleteItem(id) {
            bootbox.confirm({
                title: "Thông báo xóa?",
                message: "Bạn có muốn xóa mục này không? ",
                buttons: {
                    cancel: {
                        label: '<i class="fa fa-times"></i> Hủy'
                    },
                    confirm: {
                        label: '<i class="fa fa-check"></i> Tiếp tục'
                    }
                },
                callback: function (result) {
                    if (result == true) {
                        $.post('/Admin/ADTuyenDuong/Delete', { id: id }, function (data) {
                            if (data.success == 1) {
                                alert('Xóa thành công!');
                                $('#row_' + id).remove();
                            } else { alert('Xóa thất bại!'); }
                        })
                    }
                }
            });
        }
  
    </script>
</body>
</html>

